{
    "compilerOptions": {
        "outDir": "./build/",
        "sourceMap": true, // generates '.map' file
        "noImplicitAny": false,
        "noUnusedLocals": false, // errors for unused locals
        "module": "commonjs",
        "target": "es5" ,
        "lib": ["es2015" ]
      },
      "include": [
        "./**/*"
      ],
      "exclude": [
        "node_modules/",
        "build/"
      ]
  }